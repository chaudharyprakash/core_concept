<div class="row">
  <div class="col-xs-10 col-xs-offset-2 col-sm-8 col-sm-offset-4 col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3">
    <%= form_for @rent, url: @rent.new_record? ? rooms_path : room_path, html: {method: @member.new_record? ? 'POST' : 'PATCH' } do|f| %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name......' %>  
      </div>
      <div class="field">
        <%= f.label :phone %><br>
        <%= f.number_field :phone, class: 'form-control', placeholder: 'Phone......' %>
      </div>
      <div class="field">
        <%= f.label :rent %><br>
        <%= f.number_field :rent, class: 'form-control', placeholder: 'Rent......' %>
      </div>
      <div class="field mt-15">
        <%= f.submit "Add", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
